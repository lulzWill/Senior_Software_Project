= javascript_include_tag 'signup_scripts'
.container{:style => "background-color: white;"}
    = form_tag photos_path, :id => 'photo_form', multipart: true do
    
        = hidden_field_tag :album_id, @album_id
        
        %div.form-group.row
            = label :photo, :title, 'Title', :class => 'col-sm-2'
            = text_field :photo, 'title', :id => 'title', :class => 'col-sm-9'
        %div.form-group.row
            = label :photo, :description, 'Description', :class => 'col-sm-2'
            = text_field :photo, 'description', :id => 'description', :class => 'col-sm-9'
        %div.form-group.row
            = label :photo, :pic, 'New Picture', :class => 'col-sm-2'
            = file_field_tag :pic, :id => 'pic', accept: 'image/png,image/gif,image/jpeg', :onchange => "displayImage(this)" 
            %img.img-responsive.img-rounded{:src => "", :id => "previewimage"} 
        %div.row{:style => "margin-left: 2%;"}     
            = submit_tag 'Add Picture', :id => 'picture_submit', :class => 'btn btn-success'