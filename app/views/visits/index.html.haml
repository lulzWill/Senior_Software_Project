.container
    -if @visits != []
        - @visits.each do |visit|
            .panel.panel-default
                -@visit = visit
                .panel-body
                    =render :partial => 'visits/visit'
                .panel-footer
                    = link_to "Visit Info", visit_path(visit)
    -else
        .panel.panel-default
            .panel-body
                No visits to show
            